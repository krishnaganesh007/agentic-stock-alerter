{
    "manifest_version": 3,
    "name": "StockAlertAgent",
    "version": "1.0",
    "description": "AI-powered stock monitoring with natural language input",
    "permissions": [
      "storage",
      "alarms",
      "notifications",
      "activeTab"
    ],
    "host_permissions": [
      "https://query1.finance.yahoo.com/*",
      "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "StockAlertAgent",
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  